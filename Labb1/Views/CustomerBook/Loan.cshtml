@using Labb1.ViewModels

@model CustomerBooksViewModel

<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            Returned
        </th>
        <th>
            Images
        </th>
        <th>
            Återlämmnings Datum
        </th>
    </tr>


@foreach (var item in Model.CustomerBook)
{
    var test = Model.Books.Where(i => i.BookId ==item.BookId);
    @foreach (var items in test)
    {
            <tbody>
                <tr>
                    <td>
                        @items.Title
                    </td>

                    <td>
                        @items.Author
                    </td>
               <td>
                        @if (items.Avalible)
                        {
                            <p>Boken är återlämnad</p>
                        }
                        @if (!items.Avalible)
                        {
                            <p>Boken är inte återlämnad</p>
                        }
               </td>
               <td>
                        <img src="@items.ImageUrl" class="img-fluid">
               </td>
               
                <td>
                        <p>@item.ReturnDate </p>
                </td>
                

                </tr>
            </tbody>
     

       
    }
}
</table>





