@model IEnumerable<Book>

<div class="container">
    <div>
        <h1>Kunder</h1>
        <a class="btn btn-primary" asp-controller="Book" asp-action="Index">Lägg till ny bok</a>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
     
                <th>
                    Image
                </th>

            </tr>


            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.Author
                        </td>
                        <td>
                            <img src="@item.ImageUrl" alt="book"/>
                        </td>
                        <td>
                            
                            <a class="btn btn-primary" asp-controller="CustomerBook" asp-action="create" asp-route-id="@item.BookId"> Låna bok</a>

                        </td>

                    </tr>
                }



            </tbody>

        </table>

    </div>
</div>
